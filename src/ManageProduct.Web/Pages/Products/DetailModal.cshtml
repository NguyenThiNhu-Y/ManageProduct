@page
@using ManageProduct.Localization
@using ManageProduct.Web.Pages.Products
@using Microsoft.Extensions.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@using ManageProduct.Products
@model DetailModalModel
@inject IStringLocalizer<ManageProductResource> L
@*@{
        Layout = null;
    }*@
@section Scripts{

    <script src="https://cdnjs.cloudflare.com/ajax/libs/showdown/1.9.0/showdown.min.js"></script>
    <script>
        $(function () {
            var converter = new showdown.Converter();
            var text = $("#short").val();
            document.getElementById('test').innerHTML = converter.makeHtml(text);
        })
    </script>
}

<form method="post" asp-page="/Products/DetailModal">
    <abp-card>
        <abp-card-header title="@L["Detail"].Value"></abp-card-header>
        <abp-card-body>
            <a href="/Products/Index" class="btn btn-primary">@L["Back"].Value</a>
            <abp-input asp-for="Id" />



            <div class="mb-3">
                <label>@L["Name"]</label>
                <input asp-for="Product.Name" readonly class="form-control" />
            </div>
            <div class="mb-3">
                <label>@L["Price"]</label>
                <input asp-for="Product.Price" readonly class="form-control" />
            </div>
            <div class="mb-3">
                <label>@L["Image"]</label>
                <br />
                @{ var path = "/ImageProducts/" + Model.Product.Image;}
                <img src="@path" onerror="this.onerror=null;this.src='/ImageProducts/imageDefault.jpg'" width="100" height="100" />
            </div>
            @if (Model.ProductImages.Count != 0)
            {
                <div class="mb-3">
                    <label>@L["ImageOther"]</label>
                    <br />
                    @foreach (var item in Model.ProductImages)
                    {
                        var path1 = "/ImageProducts/" + item.Image;
                        <img src="@path1" onerror="this.onerror=null;this.src='/ImageProducts/imageDefault.jpg'" width="100" height="100" />
                    }
                </div>
            }


            <div class="mb-3">
                <label>@L["CategoryParent"]</label>
                <input asp-for="Product.CategoryName" readonly class="form-control" />
            </div>
            <div class="mb-3">
                <label class="form-label">@L["ShortBio"]</label>
                <textarea asp-for="Product.Describe" id="short" rows="3" hidden></textarea>
                <div id="test">

                </div>
            </div>
        </abp-card-body>
        @*<abp-card-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-card-footer>*@
    </abp-card>
</form>
