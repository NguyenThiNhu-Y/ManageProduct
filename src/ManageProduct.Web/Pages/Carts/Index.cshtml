@page
@using ManageProduct.Localization
@using ManageProduct.Web.Pages.Carts
@using Microsoft.Extensions.Localization
@model IndexModel
@inject IStringLocalizer<ManageProductResource> L
@section scripts {
    <script type="text/javascript" src="/Pages/Carts/Index.js"></script>

}

<link rel="stylesheet" href="~/CSS/Style.css" />
<abp-card>
    <abp-card-header>
        <abp-row>
            <abp-column size-md="_6">
                <abp-card-title>@L["Carts"]</abp-card-title>
            </abp-column>
            
        </abp-row>
    </abp-card-header>
    <abp-card-body>
        <abp-column size-md="_4" style="float:right">
            <input name="Search" placeholder="@L["Search"]" class="form-control" /> @* add search input *@
        </abp-column>
        <abp-table striped-rows="true" id="CartsTable"></abp-table>
    </abp-card-body>
</abp-card>