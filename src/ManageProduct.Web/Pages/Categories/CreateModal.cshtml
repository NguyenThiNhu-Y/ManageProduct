@page
@using ManageProduct.Localization
@using ManageProduct.Web.Pages.Categories
@using Microsoft.Extensions.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@using ManageProduct.Categories
@model CreateModalModel
@inject IStringLocalizer<ManageProductResource> L
@{
    Layout = null;
}

<form method="post" asp-page="/Categories/CreateModal">
    <abp-modal size="ExtraLarge">
        <abp-modal-header title="@L["NewCategory"].Value"></abp-modal-header>
        <abp-modal-body>
            <abp-input asp-for="Category.Name" required />
            <abp-select asp-for="Category.IdParen" asp-items="Model.CategoryIdFilterItems" />
            <div class="form-group">
                <label>@L["Image"]</label>
                <input class="form-control" type="file" name="file" accept="image/*" />
            </div>
            <abp-input asp-for="Category.Describe" id="short" />
        </abp-modal-body>
        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</form>
