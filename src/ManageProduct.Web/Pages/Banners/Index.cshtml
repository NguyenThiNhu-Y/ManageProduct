@page
@using ManageProduct.Localization
@using ManageProduct.Web.Pages.Banners
@using Microsoft.Extensions.Localization
@model IndexModel
@inject IStringLocalizer<ManageProductResource> L
@section scripts {
    <script type="text/javascript" src="/Pages/Banners/Index.js"></script>
    <link href="~/CSS/Style.css" rel="stylesheet" />
}

<abp-card>
    <abp-card-header>
        <abp-row>
            <abp-column size-md="_6">
                <abp-card-title>@L["Bannes"]</abp-card-title>
            </abp-column>
            <abp-column size-md="_6" class="text-right" style="text-align:right">
                <abp-button id="NewBannerButton"
                            text="@L["NewBanner"].Value"
                            icon="plus"
                            button-type="Primary" />

            </abp-column>
        </abp-row>
    </abp-card-header>
    <abp-card-body>
        <abp-column size-md="_4" style="float:right">
            <input name="Search" placeholder="@L["Search"]" class="form-control" /> @* add search input *@
        </abp-column>
        <abp-table striped-rows="true" id="BannersTable"></abp-table>
    </abp-card-body>
</abp-card>